--Create tables
--(https://www.w3schools.com/sql/sql_ref_add_constraint.asp( ADD CONSTRAINT PK_Person PRIMARY KEY (ID,LastName);))
--(https://www.1keydata.com/sql/sql-foreign-key.html)
DROP TABLE IF EXISTS Video_Game_Sales_by_Console;
DROP TABLE IF EXISTS Video_Game_Scores;
Create Table "Video_Game_Sales_by_Console"(
	"Name" VARCHAR NOT NULL,
	"NA_Sales" VARCHAR NOT NULL,
	"EU_Sales" VARCHAR NOT NULL,
	"JP_Sales" VARCHAR NOT NULL,
	"Other_Sales" VARCHAR NOT NULL,
	"Global_Sales" VARCHAR NOT NULL,
	"Platform" VARCHAR NOT NULL,
	Console VARCHAR Primary Key
);
Create Table "Video_Game_Scores"(
	"Name" VARCHAR NOT NULL,
	"Platform" VARCHAR NOT NULL,
	"Critic_Score" VARCHAR Not Null,
	"User_Score" VARCHAR NOT NULL,
	Console VARCHAR Primary Key
);
